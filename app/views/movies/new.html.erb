<h1>Cageflix</h1>
<p>Netflix for NIc Cage movies</p>

<%= form_for @movie, url: create_path do |f| %>

  <div class="errors">
    <% if @movie.errors.full_messages.any? %>
    <% @movie.errors.full_messages.each do |error| %>
        <%= error if @movie.errors.full_messages.first == error %><br />
        <% end %>

    <% end %>
    </div>




  <div>
  <%= f.label :name, "Name" %>
  <%= f.text_field :name, autofocus: true %>
  </div>
  <div>
    <%= f.label :year, "Year" %>
    <%= f.number_field :year %>
  </div>
  <div>
    <%= f.label :synopsis, "Synopsis" %>
    <%= f.text_field :synopsis, autofocus: true %>
  </div>
  <div>
    <%= f.submit "Create Movie" %>
  </div>
<% end %>
